@page "/create-user"
@using ApiContracts
@using BlazorApp.Services.User
@inject IUserService UserService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3>Create New User</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Username:</label>
            <input type="text" class="form-control" @bind="username"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Password:</label>
            <input type="password" class="form-control" @bind="password"/>
        </div>

        <button class="btn btn-primary" @onclick="HandleCreateUser">Create User
        </button>
        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string errorMessage = string.Empty;

    private async Task HandleCreateUser()
    {
        try
        {
            errorMessage = string.Empty;

            CreateUserDto dto = new CreateUserDto
            {
                UserName = username,
                Password = password
            };

            await UserService.AddUserAsync(dto);
            NavigationManager.NavigateTo("/posts"); // Navigate to posts list after creation
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }

}